@model WhiteLagon.Domain.Entities.Villa  

<div class="w-100 card border-0 p-4">  

    <div class="card-header bg-success bg-gradient m-lg-0 py-3">  
        <div class="row">  
            <div class="col-12 text-center">  
                <h2 class="text-white py-2">Create Villa</h2>  
            </div>  
        </div>  
    </div>  

    <div class="card-body border p-4">  
        <form action="Create" method="post" class="row">
            <div class="col-12 mb-3 p-3">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Name" class="form-control border shadow" />
                    <label asp-for="Name" class="ms-2">Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Description" class="form-control border shadow" />
                    <label asp-for="Description" class="ms-2">Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Price" class="form-control border shadow" />
                    <label asp-for="Price" class="ms-2">Price</label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Sqft" class="form-control border shadow" />
                    <label asp-for="Sqft" class="ms-2">Sqft</label>
                    <span asp-validation-for="Sqft" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Occupency" class="form-control border shadow" />
                    <label asp-for="Occupency" class="ms-2">Occupency</label>
                    <span asp-validation-for="Occupency" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="ImageUrl" class="form-control border shadow" />
                    <label asp-for="ImageUrl" class="ms-2">Image Url</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-1000">
                            <i class="bi bi-check-circle"></i> Create
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Villa" asp-action="Index" class="btn btn-secondary w-1000">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>  
        </form>  
    </div>  
</div>





